<UserControl x:Class="SoftTeach.Resources.Controls.DialogHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="123" d:DesignWidth="367">
  <Border Name="SurroundBorder" Grid.Row="1" CornerRadius="2" BorderBrush="White" BorderThickness="1" Background="{StaticResource BannerBackgroundBrush}">
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="80"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <Image VerticalAlignment="Top" Grid.Column="0" Name="icon" Width="64" Height="64" Margin="8" Source="/SoftTeach;component/Images/Logo64.png" />
      <TextBlock VerticalAlignment="Top" Grid.Column="1" Name="title" Foreground="White" FontSize="14" TextWrapping="Wrap" Margin="5">Title again</TextBlock>
    </Grid>
  </Border>
</UserControl>
