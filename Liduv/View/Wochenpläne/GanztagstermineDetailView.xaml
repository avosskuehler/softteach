<UserControl x:Class="Liduv.View.Wochenpläne.GanztagstermineDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:WochenpläneView="clr-namespace:Liduv.View.Wochenpläne"
             xmlns:Wochenpläne="clr-namespace:Liduv.ViewModel.Wochenpläne" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200" >
  <UserControl.Resources>
    <DataTemplate DataType="{x:Type Wochenpläne:WochenplanEintrag}">
      <WochenpläneView:GanztagsterminSingleView />
    </DataTemplate>
  </UserControl.Resources>
  <ListBox Grid.Row="1"
           ItemsSource="{Binding Path=GanztagsterminEinträge}"
           HorizontalContentAlignment="Stretch"
           BorderThickness="0"
           />
</UserControl>
