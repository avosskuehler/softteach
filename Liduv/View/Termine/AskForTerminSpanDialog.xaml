<Window x:Class="Liduv.View.Termine.AskForTerminSpanDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:resources="clr-namespace:Liduv.Resources" xmlns:controls="clr-namespace:Liduv.Resources.Controls"
        Title="Frage ..." 
        Height="260" 
        Width="370" 
        ResizeMode="NoResize" 
        WindowStyle="SingleBorderWindow">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <controls:SmallDialogHeader Grid.Row="0" Title="Geben Sie bitte den Zeitraum für den Termin an."
                                      Icon="/Liduv;component/Images/Jahresplan32.png"/>
    <StackPanel Grid.Row="1" Margin="10">
      <TextBlock TextWrapping="Wrap">Erster Tag des mehrtägigen Termins.</TextBlock>
      <DatePicker Name="StartDate"/>
      <TextBlock TextWrapping="Wrap">Letzter Tag des mehrtägigen Termins.</TextBlock>
      <DatePicker Name="EndDate"/>
    </StackPanel>
    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
      <Button Width="100" HorizontalAlignment="Right" IsDefault="True" Click="OkClick" TabIndex="2">OK</Button>
    </StackPanel>
  </Grid>
</Window>
