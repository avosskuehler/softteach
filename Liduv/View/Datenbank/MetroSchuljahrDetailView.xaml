      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </UserControl.Resources>
  <RadioButton GroupName="Schuljahr" Style="{StaticResource MetroToggleRadioButton}" Width="150" Click="SchuljahrButtonOnClick" Content="{Binding Path=JahrtypBezeichnung}"/>
