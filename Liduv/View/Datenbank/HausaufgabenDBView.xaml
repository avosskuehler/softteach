<Window x:Class="Liduv.View.Datenbank.HausaufgabenDBView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:resources="clr-namespace:Liduv.Resources" xmlns:liduv="clr-namespace:Liduv"
        xmlns:controls="clr-namespace:Liduv.Resources.Controls"
        mc:Ignorable="d" 
        Title="Datenbank - Hausaufgaben"
        Icon="/Liduv;component/Images/Database.ico"
        d:DesignHeight="400" d:DesignWidth="800" WindowStyle="SingleBorderWindow">
  <Window.Resources>
  </Window.Resources>
  <Grid Background="{StaticResource MainBackgroundBrush}">
    <Grid.RowDefinitions>
      <RowDefinition Height="48"/>
      <RowDefinition/>
      <RowDefinition Height="32"/>
    </Grid.RowDefinitions>
    <controls:SmallDialogHeader  Icon="/Liduv;component/Images/Person32.png" 
                              Grid.Row="0" 
                              Title="Das ist der Inhalt der Hausaufgaben-Tabelle."/>
    <GroupBox Grid.Row="1" Header="Tabelle der Hausaufgaben" Padding="3" Margin="5">
      <DataGrid ItemsSource="{Binding Source={x:Static liduv:App.MainViewModel}, Path=Hausaufgaben}" 
                AutoGenerateColumns="False" IsReadOnly="True">
        <DataGrid.Columns>
          <DataGridTextColumn Header="Schuljahr" Binding="{Binding Path=Model.Schülereinträge.Schülerliste.Jahrtypen.Bezeichnung}"/>
          <DataGridTextColumn Header="Nachname" Binding="{Binding Path=Model.Schülereinträge.Person.Nachname}"/>
          <DataGridTextColumn Header="Vorname" Binding="{Binding Path=Model.Schülereinträge.Person.Vorname}"/>
          <DataGridTextColumn Header="Bezeichnung" Binding="{Binding Path=HausaufgabeBezeichnung}"/>
          <DataGridTextColumn Header="Datum" Binding="{Binding Path=HausaufgabeDatumString}"/>
          <DataGridCheckBoxColumn Header="IstNachgereicht" Binding="{Binding Path=HausaufgabeIstNachgereicht}"/>
       </DataGrid.Columns>
      </DataGrid>
    </GroupBox>
    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Name="OK" Width="80" Margin="3" IsDefault="True" Click="OKClick">OK</Button>
    </StackPanel>
  </Grid>
</Window>
